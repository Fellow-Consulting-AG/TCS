				for each(var con:Object in lstContains){
					var contains:String = con.params;
					if(!StringUtils.isEmpty(contains)){
						for each(var str:String in contains.split(";")) {
							if(key == str){
								tmp = con;
								break;
								
							} 
						}
					}
					
				}
				if(tmp==null){
					// subtype = 0 is default layout
					s = -1;
					
				}else{
					s = tmp.subtype;
				}
				return s;
			}
